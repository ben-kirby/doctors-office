<div class="container">
  <h1>Doctors who specialize in <%= @specialty %></h2>
    <ul class="list-group list-group-flush">

    <% @doctors.each do |doctor|%>
      <% if doctor.specialty == @specialty_id %>
      <li class="list-group-item"><%= doctor.name %></li>
      <% end %>
      <% end %>
  </ul>
</div>

<div class="container">
  <a href="/"> <button class="btn btn-outline-danger" type="button" name="button">Go Home</button> </a>
</div>

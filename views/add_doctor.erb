<div class="container">
  <h1>Doctor Info</h1>
  <form  action="/add_doctor" method="post">
    <div class="form-group">
      <input type="text" name="new_name" placeholder="Name">
    </div>

    <div class="form-group">
      <input type="text" name="new_specialty" placeholder="Specialty">
    </div>
    <button class="btn btn-primary"  type="submit" name="button">Add</button>
    <br>
    <br>
    <br>


  </form>

  <h2>Doctors</h2>
  <% if @doctors == [] %>
  <p>No doctors have been added to this list.</p>
  <% else %>
  <ul class="list-group list-group-flush">
    <% @doctors.each do |doctor| %>
    <li class="list-group-item"><%= doctor.name %> , <% @specialties.each do |specialty2| %>
      <% if specialty2.id == doctor.specialty %>
      <%= specialty2.specialty %>
      <% end %>
    <% end %>
    <% end %>
    </li>
    <% end %>
  </ul>
</div>

<br>



<div class="container">
  <a href="/"> <button class="btn btn-outline-danger"  type="button" name="button">Go Home</button> </a>
</div>

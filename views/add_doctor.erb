<div class="container">
  <h1>Doctor Info</h1>
  <form  action="/add_doctor" method="post">
    <div class="form-group">
      <input type="text" name="new_name" placeholder="Name">
    </div>

    <div class="form-group">
      <input type="text" name="new_specialty" placeholder="Specialty">
    </div>
    <button type="submit" name="button">Add</button>

  </form>

  <h2>Doctors</h2>
  <% if @doctors == [] %>
  <p>No doctors have been added to this list.</p>
  <% else %>
  <ul>
    <% @doctors.each do |doctor| %>
    <li><%= doctor.name %>
    <% end %>
    </li>
    <% end %>
  </ul>
</div>

<br>
<br>


<div class="container">
  <a href="/"> <button type="button" name="button">Go Home</button> </a>
</div>

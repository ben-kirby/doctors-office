<div class="container">
  <h1>Patient Info</h1>
  <form  action="/add_patient" method="post">
    <div class="form-group">
      <input type="text" name="new_name" placeholder="Name">
    </div>

    <div class="form-group">
      <input type="date" name="new_birthday" placeholder="Specialty">
    </div>

    <div class="form-group">
      <label for="dr-list">Assign doctor:</label>
      <select name="dr-list">
        <% @doctors.each do |doctor|%>
            <option value="<%= doctor.name %>"><%= doctor.name %></option>
        <%end%>
      </select>
    </div>
    <button class="btn btn-primary" type="submit" name="button">Add</button>

  </form>

  <br>
  <br>



  <h2>Patients</h2>
  <% if @patients == [] %>
  <p>No patients have been added to this list.</p>
  <% else %>
  <ul class="list-group list-group-flush">
    <% @patients.each do |patient| %>
    <li class="list-group-item"> <a href="/patient/<%= patient.id %>"><%= patient.name %> , <%= patient.birthday %><% end %>
    </a></li>
    <% end %>
  </ul>
</div>

<br>


<div class="container">
  <a href="/"> <button class="btn btn-outline-danger" type="button" name="button">Go Home</button> </a>
</div>

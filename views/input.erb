<div class="container">
    <div class="row">
      <div class="col">
        <h1>ADMIN</h1>
        <br>
        <a href="/add_doctor"><button type="button" >Add Doctor</button></a>
        <br>
        <br>
        <a href="/add_patient"><button type="button" >Add Patient</button></a>

        <br>
        <br>
        <a href="/add_doctor_to_patient"><button type="button" >Add Dr. to Patient</button></a>
      </div>

      <div class="col">
        <h1>DOCTOR</h1>
        <form class="" action="/patient_list">
          <div class="form-group">
            <select class="" name="dr-list">
              <% @doctors.each do |doctor|%>
                  <option value="<%= doctor.name %>"><%= doctor.name %></option>
              <%end%>
              </select>
            <button type="submit" name="button">Get Patients</button>
          </form>
        </div>
      </div>

      <div class="col">
        <h1>PAITENT</h1>

        <form class="" action="/specialty_list">
          <div class="form-group">
            <select class="" name="specialty-list">
              <% @specialties.each do |specialty|%>
                  <option value="<%= specialty.specialty %>"><%= specialty.specialty %></option>
              <%end%>
              </select>
            <button type="submit" name="button">See Doctors</button>
          </form>
      </div>
    </div>
</div>
